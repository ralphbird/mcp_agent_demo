# Load Tester and Dashboard System - Environment Variables Example
# Copy this file to .env and set your actual values

# Dashboard Configuration
API_BASE_URL=http://host.docker.internal:8000
LOAD_TESTER_URL=http://load-tester:8001

# Load Tester Configuration
LOAD_TESTER_API_HOST=0.0.0.0
LOAD_TESTER_API_PORT=8001
# For Docker: use host.docker.internal:8000, for local dev: use localhost:8000
LOAD_TESTER_TARGET_API_BASE_URL=http://host.docker.internal:8000

# Load Tester Logging
LOAD_TESTER_LOG_FILE=/app/logs/load_tester.log

# JWT Configuration (for load tester token generation)
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
