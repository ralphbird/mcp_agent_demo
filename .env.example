# Analytics Service and Dashboard System - Environment Variables Example
# Copy this file to .env and set your actual values

# Dashboard Configuration
API_BASE_URL=http://host.docker.internal:8000
ANALYTICS_SERVICE_URL=http://load-tester:9001

# Analytics Service Configuration
ANALYTICS_SERVICE_API_HOST=0.0.0.0
ANALYTICS_SERVICE_API_PORT=9001
# For Docker: use host.docker.internal:8000, for local dev: use localhost:8000
ANALYTICS_SERVICE_TARGET_API_BASE_URL=http://host.docker.internal:8000

# Analytics Service Logging
ANALYTICS_SERVICE_LOG_FILE=/app/logs/analytics_service.log

# JWT Configuration (for analytics service token generation)
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256

# IP Spoofing Configuration
ANALYTICS_SERVICE_IP_SPOOFING_ENABLED=false
ANALYTICS_SERVICE_IP_ROTATION_INTERVAL=5
ANALYTICS_SERVICE_IP_GEOGRAPHIC_REGIONS=US,EU,APAC
ANALYTICS_SERVICE_INCLUDE_DATACENTER_IPS=true
ANALYTICS_SERVICE_INCLUDE_RESIDENTIAL_IPS=true
